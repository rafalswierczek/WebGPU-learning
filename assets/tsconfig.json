{
    "compilerOptions": {
        "rootDir": "../src/ts/",
        "outDir": "dist/",
        "target": "ES2018",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "@webgpu/types"
        ]
    },
    "include": [
        "../src/ts/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}
